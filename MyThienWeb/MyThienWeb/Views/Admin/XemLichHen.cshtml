
@{
    ViewBag.Title = "Xem Lịch Hẹn";
    Layout = "~/Views/Shared/_layouadmin.cshtml";
}


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


    <div class="container">
        <h2>Vertical (basic) form</h2>
        <form action="~/admin/SuaLichHen?madl=@this.ViewBag.Result[0].MADL" method="post">
            <div class="form-group">
                <label for="email">Họ Tên</label>
                <input  type="text" class="form-control" value="@this.ViewBag.Result[0].HOTEN" placeholder="Họ Tên" name="hoten">
            </div>
            <div class="form-group">
                <label for="pwd">SDT</label>
                <input type="text" class="form-control" value="@this.ViewBag.Result[0].SDT" id="pwd" placeholder="SDT" name="sdt">
            </div>
            <div class="form-group">
                <label for="pwd">Ngày</label>
                <input type="text" class="form-control" value="@this.ViewBag.Result[0].NGAY" id="pwd" placeholder="SDT" name="ngay">
            </div>
            <div class="form-group">
                <label for="pwd">Giờ</label>
                <input type="text" class="form-control" value="@this.ViewBag.Result[0].GIO" id="pwd" placeholder="SDT" name="gio">
            </div>
            <div class="form-group">
                <label for="pwd">Tiêu Đề</label>
                <input type="text" class="form-control" value="@this.ViewBag.Result[0].TIEUDE" id="pwd" placeholder="SDT" name="tieude">
            </div>
            <div class="form-group">
                <label for="pwd">Nội Dung</label>
                <input type="text" class="form-control" value="@this.ViewBag.Result[0].NOIDUNG" id="pwd" placeholder="SDT" name="noidung">
            </div>
            <div class="checkbox">
                <label for="cars">Chọn Giờ</label>

                <select id="cars" name="trangthai">
                    <option value="1">Đã Xử Lý</option>
                  
                    <option value="0">Chưa Xử Lý</option>
                </select>
            </div>
            <button type="submit" class="btn btn-default">Lưu</button>
        </form>
    </div>





